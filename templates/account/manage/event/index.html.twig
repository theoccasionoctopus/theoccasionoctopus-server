{%  extends "account/manage/base.html.twig" %}

{% block body %}


    <div class="content">
        {%  include 'common/eventViewSwitcher.html.twig' with {'selected':'agenda', 'agendaURL':path('account_manage_event',{'account_username':account.username }), 'calendarURL':path('account_manage_event_calendar',{'account_username':account.username }) } %}

        {%  include 'common/eventListFilter.html.twig' with {  } %}


        <ul class="mainListEvents">

            {% for eventOccurrence in eventOccurrences %}

                <li class="event">
                        {%  if eventOccurrence.event.deleted %}
                            <h2>DELETED</h2>
                        {%  elseif eventOccurrence.event.cancelled %}
                            <h2>CANCELLED</h2>
                        {%  endif %}
                    <h2>{{  eventOccurrence.event.title }}</h2>
                    <p>{{  eventOccurrence.event.description | nl2br }}</p>
                    {%  include '/common/eventStartEndLine.html.twig' with { 'start':eventOccurrence.start, 'end':eventOccurrence.end, 'timezone': eventOccurrence.event.timezone.code } %}
                    <a class="button"
                        {%  if  eventOccurrence.event.hasReoccurence %}
                            href="{{ path('account_manage_event_show_event',{'account_username':account.username,'event_id': eventOccurrence.event.id }) }}?startutc={{ eventOccurrence.start('UTC')|date("Y-m-d-H-i-s") }}"
                        {%  else  %}
                            href="{{ path('account_manage_event_show_event',{'account_username':account.username,'event_id': eventOccurrence.event.id }) }}"
                        {%  endif %}
                        >
                        Details
                    </a>
                    <p>{% if eventOccurrence.event.privacy == 10000 %}<i class="fas fa-lock"></i> Private{%  else %}<i class="fas fa-globe-europe"></i> Public{%  endif %}</p>
                </li>

            {%  endfor %}

        </ul>


        <a href="{{ path('account_manage_event_new',{'account_username':account.username}) }}" class="button" role="button">New Event</a>

    </div>
{% endblock %}
